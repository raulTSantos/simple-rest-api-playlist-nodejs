// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
  last_session DateTime @default(now())
  update_at DateTime @updatedAt
  date_born DateTime @default(now())
  
  playlists Playlist[]
  
  @@map("users")
}
model Song{
  id Int @id @default(autoincrement())
  name String 
  artist String
  album String
  year DateTime
  genre String
  duration Int
  privatized Boolean @default(false)

  playlists Playlist[]

  @@map("songs")
}

model Playlist {
  id Int @id @default(autoincrement())
  name String?

  users User @relation(fields: [userId], references:[id])
  userId Int

  songs Song @relation(fields: [songId], references:[id])
  songId Int
  
  @@map("playlists")
}
